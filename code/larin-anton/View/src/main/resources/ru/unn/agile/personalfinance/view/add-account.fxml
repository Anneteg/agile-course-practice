<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="ru.unn.agile.personalfinance.view.AddAccountController"
          xmlns:fx="http://javafx.com/fxml">
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnSpan="2" />
    <TextField fx:id="balanceField" GridPane.rowIndex="1" GridPane.columnSpan="2" />
    <Button GridPane.rowIndex="2" GridPane.columnIndex="0" text="Add"
            onAction="#handleAddButton" />
    <Button GridPane.rowIndex="2" GridPane.columnIndex="1" text="Cancel"
            onAction="#handleCancelButton" />
</GridPane>
