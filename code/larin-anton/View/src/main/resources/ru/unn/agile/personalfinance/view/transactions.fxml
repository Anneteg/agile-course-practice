<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.*?>
<?import ru.unn.agile.personalfinance.view.ViewModelSource?>
<BorderPane fx:controller="ru.unn.agile.personalfinance.view.TransactionsView"
          xmlns:fx="http://javafx.com/fxml">
    <fx:define>
        <ViewModelSource fx:id="vmSource" />
    </fx:define>
    <left>
        <GridPane>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>
            <ListView fx:id="accountsList" GridPane.rowIndex="0"
                      items="${vmSource.model.accounts}" />
            <Button onAction="#handleAddAccountAction" GridPane.rowIndex="1"
                    GridPane.halignment="CENTER" text="Add account">
                <GridPane.margin>
                    <Insets>
                        <top>5</top>
                        <bottom>5</bottom>
                    </Insets>
                </GridPane.margin>
            </Button>
        </GridPane>
    </left>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" />
                <RowConstraints vgrow="NEVER" />
            </rowConstraints>
            <ListView fx:id="transactionsList" GridPane.rowIndex="0"
                      items="${vmSource.model.selectedAccount.transactions}" />
            <Button onAction="#handleAddTransactionAction" GridPane.rowIndex="1"
                    GridPane.halignment="CENTER" text="Add transaction">
                <GridPane.margin>
                    <Insets>
                        <top>5</top>
                        <bottom>5</bottom>
                    </Insets>
                </GridPane.margin>
            </Button>
        </GridPane>
    </center>
</BorderPane>
