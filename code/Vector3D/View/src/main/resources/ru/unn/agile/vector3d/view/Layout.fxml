<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.unn.agile.vector3d.view.Controller">
    <HBox>
        <Label text="Введите вектор:"/>
        <TextField fx:id="vectorTextField"/>
    </HBox>
    <TabPane fx:id="opsTabPane" TabClosingPolicy="UNAVAILABLE">
        <Tab fx:id="normTab" text="Норма">
            <HBox>
                <Label text="Норма вектора:"/>
                <TextField fx:id="normResultTextField" editable="false"/>
            </HBox>
        </Tab>
        <Tab fx:id="normalizationTab" text="Нормализация">
            <HBox>
                <Label text="Нормализованный вектор:"/>
                <TextField fx:id="normalizationResultTextField" editable="false"/>
            </HBox>
        </Tab>
        <Tab fx:id="dotProductTab" text="Скалярное произведение">
            <VBox>
                <HBox>
                    <Label text="Введите второй вектор:"/>
                    <TextField fx:id="dotProductOperandTextField"/>
                </HBox>
                <HBox>
                    <Label text="Результат скалярного произведения:"/>
                    <TextField fx:id="dotProductResultTextField" editable="false"/>
                </HBox>
            </VBox>
        </Tab>
        <Tab fx:id="crossProductTab" text="Векторное произведение">
            <VBox>
                <HBox>
                    <Label text="Введите второй вектор:"/>
                    <TextField fx:id="crossProductOperandTextField"/>
                </HBox>
                <HBox>
                    <Label text="Результат векторного произведения:"/>
                    <TextField fx:id="crossProductResultTextField" editable="false"/>
                </HBox>
            </VBox>
        </Tab>
    </TabPane>
    <Button fx:id="calculateButton" text="Рассчитать"/>
</VBox>
