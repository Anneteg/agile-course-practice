<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.*?>
<?import ru.unn.agile.personalfinance.view.ViewModelSource?>
<GridPane xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css"
          fx:controller="ru.unn.agile.personalfinance.view.controllers.AddExternalTransactionController">
    <fx:define>
        <ViewModelSource fx:id="vmSource" />
    </fx:define>
    <VBox GridPane.rowIndex="0" GridPane.columnSpan="2">
        <HBox>
            <fx:define>
                <ToggleGroup fx:id="incomeOrExpenseGroup" />
            </fx:define>
            <JFXRadioButton fx:id="incomeRBtn" toggleGroup="$incomeOrExpenseGroup" text="Income" />
            <JFXRadioButton toggleGroup="$incomeOrExpenseGroup" selected="true" text="Expense" />
        </HBox>
        <JFXTextField fx:id="transactionAmountField" />
        <JFXTextField fx:id="counterpartyField" />
        <JFXComboBox fx:id="categoryComboBox" items="${vmSource.model.categories}" />
        <JFXTextArea fx:id="descriptionTextArea" />
    </VBox>
    <JFXButton fx:id="addButton" GridPane.rowIndex="1" GridPane.columnIndex="0" text="Add"
               onAction="#handleAddButtonAction" />
    <JFXButton GridPane.rowIndex="1" GridPane.columnIndex="1" text="Cancel"
               onAction="#handleCancelButtonAction" />
</GridPane>
