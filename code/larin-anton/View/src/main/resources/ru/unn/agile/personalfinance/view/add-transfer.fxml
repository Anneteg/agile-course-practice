<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.layout.*?>
<?import ru.unn.agile.personalfinance.view.ViewModelSource?>
<?import javafx.scene.control.Label?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" stylesheets="@style.css"
            fx:controller="ru.unn.agile.personalfinance.view.controllers.AddTransferController">
    <GridPane vgap="10"
              AnchorPane.bottomAnchor="50"
              AnchorPane.leftAnchor="10"
              AnchorPane.rightAnchor="10"
              AnchorPane.topAnchor="10">
        <fx:define>
            <ViewModelSource fx:id="vmSource"/>
        </fx:define>

        <rowConstraints>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
            <RowConstraints vgrow="NEVER"/>
        </rowConstraints>
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" prefWidth="70"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- From -->
        <Label text="From" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <JFXComboBox fx:id="accountFromComboBox" items="${vmSource.model.accounts}"
                     maxWidth="Infinity"
                     GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- To -->
        <Label text="To" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <JFXComboBox fx:id="accountToComboBox" items="${vmSource.model.accounts}"
                     maxWidth="Infinity"
                     GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Amount -->
        <Label text="Amount" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <JFXTextField fx:id="amountField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                      maxWidth="Infinity"/>

        <!-- Date -->
        <Label text="Date" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <JFXDatePicker GridPane.rowIndex="3" GridPane.columnIndex="1"
                       maxWidth="Infinity"/>
    </GridPane>

    <!-- Buttons -->
    <HBox AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="20" spacing="10">
        <JFXButton fx:id="addButton" text="Add" styleClass="button-raised"
                   onAction="#handleAddButtonAction" prefWidth="100"/>
        <JFXButton text="Cancel" onAction="#handleCancelButtonAction" prefWidth="100" />
    </HBox>
</AnchorPane>
