                  <Label layoutX="20.0" layoutY="182.0" text="Stop criterion:" />
                  <ChoiceBox fx:id="stopCriterionSelector"
                             items="${viewModelProvider.viewModel.stopCriteria}"
                             layoutX="132.0" layoutY="177.0" prefWidth="150.0" />
            </AnchorPane>
    </TitledPane>
    <TitledPane collapsible="false" animated="false" layoutX="11.0" layoutY="301.0"
                  prefHeight="106.0"
                   prefWidth="404.0" text="Solver report">
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="77.0" prefWidth="402.0">
                  <TextArea fx:id="reportTextField" editable="false" prefHeight="80.0" prefWidth="404.0" />
          </AnchorPane>
    </TitledPane>
    <Label fx:id="statusLabel" layoutX="102.0" layoutY="270.0"
           text="${viewModelProvider.viewModel.applicationStatus}" />
